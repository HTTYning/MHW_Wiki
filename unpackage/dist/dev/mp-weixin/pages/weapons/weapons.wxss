.loading-tip {
  width: 98%;
  padding: 10px;
  height: 98%;
  color: whitesmoke;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  background-color: #c8c8c8;
  z-index: 1001;
}
.loading-tip view {
  font-size: 30px;
  margin-bottom: 30px;
}
.search-box {
  width: 80%;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: fixed;
  bottom: 30px;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  border: 2px solid #b4b4b4;
  border-radius: 5px;
  overflow: hidden;
  z-index: 1000;
}
.search-box .search-text {
  width: 100%;
}
.search-box .search-text .search-ipt {
  height: 40px;
  padding: 0 26px 0 6px;
  background-color: #f0f0f0;
}
.search-box .search-reset-btn {
  width: 20px;
  height: 40px;
  position: absolute;
  right: 0px;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 5px;
}
.search-box .search-reset-btn image {
  width: 20px;
  height: 20px;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.weapon-title-type {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-size: 22px;
  background-color: #f0f0f0;
  color: #505050;
  border-bottom: 2px solid #c8c8c8;
}
.weapon-title-type .weapon-title-type-image {
  width: 26px;
  height: 26px;
  margin-right: 10px;
}
.weapon-title-type .weapon-title-type-image image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 5px;
  border-top: 2px solid #c8c8c8;
}
.weaponList .weapon-item .weapon-titile-bar {
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  padding: 5px;
  border-bottom: 2px solid #dfdfdf;
  border-top: 1px solid #dfdfdf;
  background-color: #f7f7f7;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-icon {
  width: 30px;
  height: 30px;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-icon image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-name {
  margin-left: 10px;
  size: 20px;
  font-weight: bold;
  color: #2d2d2d;
}
.weaponList .weapon-item .weapon-attribute {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-img {
  width: 100px;
  height: 100px;
  flex-shrink: 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-img image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value {
  margin: 3px 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box {
