.weapon-number {
  padding: 5px;
  font-size: 22px;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.2);
}
.weaponList .weapon-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 5px;
  border-top: 2px solid gray;
}
.weaponList .weapon-item .weapon-titile-bar {
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  padding: 5px;
  border-bottom: 2px solid rgba(0, 0, 0, 0.1);
}
.weaponList .weapon-item .weapon-titile-bar .weapon-icon {
  width: 30px;
  height: 30px;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-icon image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-name {
  margin-left: 10px;
  size: 20px;
  font-weight: bold;
  color: black;
}
.weaponList .weapon-item .weapon-attribute {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-img {
  width: 100px;
  height: 100px;
}
.weaponList .weapon-item .weapon-attribute .weapon-img image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value {
  margin: 3px 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box .weapon-value-icon {
  width: 18px;
  height: 18px;
  margin-right: 3px;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box .weapon-value-icon image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box .weapon-value {
  font-weight: bold;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-slots {
  display: flex;
  flex-direction: row;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-slots image {
  width: 20px;
  height: 20px;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-durability {
  width: 150px;
  height: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: gray;
  border: 1px solid black;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-durability view {
  height: 100%;
}

