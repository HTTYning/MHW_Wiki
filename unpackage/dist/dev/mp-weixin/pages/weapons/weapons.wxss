.weapon-number {
  padding: 5px;
  font-size: 22px;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.2);
}
.weaponList .weapon-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-bottom: 5px;
  border-top: 2px solid #c8c8c8;
}
.weaponList .weapon-item .weapon-titile-bar {
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  padding: 5px;
  border-bottom: 2px solid #dfdfdf;
  border-top: 1px solid #dfdfdf;
  background-color: #f7f7f7;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-icon {
  width: 30px;
  height: 30px;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-icon image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-titile-bar .weapon-name {
  margin-left: 10px;
  size: 20px;
  font-weight: bold;
  color: black;
}
.weaponList .weapon-item .weapon-attribute {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-img {
  width: 100px;
  height: 100px;
  flex-shrink: 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-img image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value {
  margin: 3px 0;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box .weapon-value-icon {
  width: 18px;
  height: 18px;
  margin-right: 3px;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-value-box .weapon-value-icon image {
  width: 100%;
  height: 100%;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-slots {
  display: flex;
  flex-direction: row;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-slots image {
  width: 20px;
  height: 20px;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-durability {
  width: 150px;
  height: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #c8c8c8;
  border: 1px solid #b4b4b4;
  margin-top: 3px;
  border-radius: 1px;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-durability .weapon-dur-bar {
  height: 100%;
  opacity: 0.8;
  position: relative;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-durability .weapon-dur-bar .weapon-dur-value {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: black;
  font-size: 8px;
  text-shadow: -1px 0 #dfdfdf, 0 1px #dfdfdf, 1px 0 #dfdfdf, 0 -1px #dfdfdf;
  /* 上边 */
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-ammo {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.weaponList .weapon-item .weapon-attribute .weapon-attribute-value .weapon-ammo .weapon-ammo-item {
  display: flex;
  justify-content: left;
  flex: 0 0 calc(50%);
  box-sizing: border-box;
  align-items: center;
}

