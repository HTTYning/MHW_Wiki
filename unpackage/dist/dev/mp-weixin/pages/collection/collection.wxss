.collection-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.collection-content .collection-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f7f7f7;
  border-bottom: 2px solid #dfdfdf;
  padding: 10px 0;
  color: #515151;
  font-size: 18px;
  font-weight: bold;
  box-sizing: border-box;
}
.collection-content .collection-tabbar {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}
.collection-content .collection-tabbar .tabbar-item {
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #515151;
  font-weight: bold;
  font-size: 14px;
  flex: 0 0 calc(50%);
  box-sizing: border-box;
  z-index: 1;
}
.collection-content .collection-tabbar .tabbar-item .tabbar-item-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 6px;
  -webkit-transform: rotate(0deg);
          transform: rotate(0deg);
  transition: all 0.2s ease-out 0s;
}
.collection-content .collection-tabbar .tabbar-item .tabbar-item-icon image {
  width: 20px;
  height: 20px;
}
.collection-content .collection-tabbar .tabbar-item .tabbar-item-icon-active {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.collection-content .collection-tabbar .tabbar-animation-bar {
  width: 50%;
  height: 38px;
  position: absolute;
  top: 0;
  -webkit-transform: translateX(0%);
          transform: translateX(0%);
  background-color: #f7f7f7;
  border-bottom: 2px solid #dfdfdf;
  z-index: -1;
  transition: all 0.2s ease-out 0s;
}
.collection-content .collection-tabbar .tabbar-animation-bar-switch {
  -webkit-transform: translateX(100%);
          transform: translateX(100%);
}
.collection-content .filter-tab-Masking {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  z-index: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease-out 0s;
  top: -100%;
  opacity: 0;
}
.collection-content .filter-tab-Masking .filter-tab-box {
  width: 70%;
  height: 70%;
  background-color: white;
  border-radius: 10px;
  border: 3px solid #dfdfdf;
  position: relative;
}
.collection-content .filter-tab-Masking .filter-tab-box .filter-tab-title {
  width: 100%;
  height: 20px;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
  border-bottom: 2px solid #dfdfdf;
  color: #2d2d2d;
}
.collection-content .filter-tab-Masking .filter-tab-box .filter-tab-hidden-btn {
  top: 10px;
  right: 10px;
  position: absolute;
}
.collection-content .filter-tab-Masking .filter-tab-box .filter-tab-hidden-btn image {
  width: 22px;
  height: 22px;
}
.collection-content .filter-tab-Masking .filter-tab-box .filter-tab-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.collection-content .filter-tab-Masking .filter-tab-box .filter-tab-list .filter-tab-item {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border: 1px solid #dfdfdf;
  color: #515151;
}
.collection-content .filter-tab-Masking-active {
  top: 0%;
  opacity: 1;
}

