.window-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: -50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease-out 0s;
  opacity: 0;
}
.window-bg .window-box {
  width: 90%;
  height: 93%;
  border-radius: 10px;
  background-color: white;
  border: 3px solid #dfdfdf;
  position: relative;
  display: flex;
  flex-direction: column;
}
.window-bg .window-box .window-hidden-btn {
  top: 10px;
  right: 10px;
  position: absolute;
}
.window-bg .window-box .window-hidden-btn image {
  width: 22px;
  height: 22px;
}
.window-bg .window-box .window-title {
  width: 100%;
  height: 20px;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
  border-bottom: 2px solid #515151;
  color: #2d2d2d;
}
.window-bg .window-box .ipt-list {
  padding: 8px 14px;
}
.window-bg .window-box .ipt-list .ipt-item {
  width: 100%;
  border: 1px solid #dfdfdf;
  margin-bottom: 3px;
  border-radius: 5px;
  padding: 6px 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}
.window-bg .window-box .ipt-list .ipt-item .item-text {
  width: 100%;
  font-size: 18px;
  transition: all 0.2s ease-out 0s;
  color: black;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.window-bg .window-box .ipt-list .ipt-item .item-text .tip-text {
  color: red;
  font-size: 12px;
}
.window-bg .window-box .ipt-list .ipt-item .item-text-show {
  font-size: 14px;
  color: #505050;
}
.window-bg .window-box .ipt-list .ipt-item .item-ipt-box {
  width: 100%;
  max-height: 0;
  transition: all 0.2s ease-out 0s;
  overflow: hidden;
}
.window-bg .window-box .ipt-list .ipt-item .item-ipt-box .item-ipt {
  margin-top: 3px;
}
.window-bg .window-box .ipt-list .ipt-item .item-ipt-box-show {
  max-height: 200px;
}
.window-bg .window-box .operation-btn-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 14px;
  box-sizing: border-box;
  justify-content: center;
}
.window-bg .window-box .operation-btn-box .operation-btn-item {
  min-width: 50%;
  margin-bottom: 3px;
  padding: 0 2px;
  box-sizing: border-box;
}
.window-bg .window-box .operation-btn-box .operation-btn-item .operation-btn {
  font-size: 16px;
  border: 1px solid #dfdfdf;
}
.window-bg-show {
  top: 50%;
  opacity: 1;
}
.personal-info {
  width: 100%;
  height: 120px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 5px 10px;
  box-sizing: border-box;
  border-bottom: 2px solid #bfbfbf;
}
.personal-info .info-box-left {
  flex-shrink: 0;
}
.personal-info .info-box-left .info-headImage {
  width: 100px;
  height: 100px;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.personal-info .info-box-left .info-headImage image {
  width: 100px;
  height: 100px;
}
.personal-info .info-box-middle {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 14px 0;
  box-sizing: border-box;
  margin-left: 10px;
}
.personal-info .info-box-middle .info-name {
  font-size: 20px;
  font-weight: bold;
  color: black;
}
.personal-info .info-box-middle .info-introduction {
  color: #2d2d2d;
  margin-top: 5px;
  font-size: 14px;
}
.personal-info .info-box-right {
  padding: 5px 10px;
  border-radius: 7px;
  flex-shrink: 0;
  background-color: #bfbfbf;
  color: white;
  font-weight: bold;
  margin-right: 20px;
}
.setting-box {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10px;
  border-bottom: 2px solid #bfbfbf;
}
.setting-box .btn-text {
  color: #2d2d2d;
  font-weight: bold;
}
.setting-box .btn-icon image {
  width: 20px;
  height: 20px;
}

